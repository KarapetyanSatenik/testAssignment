{
  "compilerOptions": {
    "moduleResolution": "node16",
    "module": "Node16",
    "esModuleInterop": true,
    "target": "ES2020",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"]
}
